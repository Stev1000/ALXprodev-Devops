#!/bin/bash

# Script: summaryData-0x03
# Description: Reads Pokémon JSON files, extracts name, height, weight,
# generates a CSV report and calculates average height & weight.

# Set CSV output file and correct JSON data directory
csv_file="pokemon_report.csv"
json_dir="pokemon_data"  # <- Fixed path based on your Task 2 script

# Check if directory exists
if [ ! -d "$json_dir" ]; then
    echo "❌ Error: Directory $json_dir does not exist!"
    exit 1
fi

# Create CSV header
echo "Name,Height (m),Weight (kg)" > "$csv_file"

# Loop through all JSON files
for file in "$json_dir"/*.json; do
    name=$(jq -r '.name' "$file" | sed 's/.*/\u&/')
    height_dm=$(jq -r '.height' "$file")
    weight_hg=$(jq -r '.weight' "$file")

    # Convert to meters and kilograms
    height_m=$(awk "BEGIN { printf \"%.1f\", $height_dm / 10 }")
    weight_kg=$(awk "BEGIN { printf \"%.1f\", $weight_hg / 10 }")

    # Add to CSV
    echo "$name,$height_m,$weight_kg" >> "$csv_file"
done

# Display results
echo -e "\nCSV Report generated at: $csv_file"
echo
cat "$csv_file"

# Calculate averages
awk -F, '
    NR > 1 {
        height += $2
        weight += $3
        count++
    }
    END {
        if (count > 0) {
            printf "\nAverage Height: %.2f m\n", height / count
            printf "Average Weight: %.2f kg\n", weight / count
        } else {
            print "No data available to calculate averages."
        }
    }
' "$csv_file"
